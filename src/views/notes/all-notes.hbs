<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between aling-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="delete">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
                    </form>
               </div>
            </div>
        </div>
    
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola!</h1>
            <p class="lead">No hay notas agregadas.</p>
            <a href="/notes/add" class="btn btn-success btn-block">Crea una nota!</a>
        </div>
    </div>
    {{/each}}
</div>